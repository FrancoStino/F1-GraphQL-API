{
  "name": "f1-graphql-api",
  "version": "1.6.2",
  "description": "A comprehensive and flexible GraphQL API that provides access to historical and real-time Formula 1 data.",
  "author": "Davide Ladisa",
  "main": "index.ts",
  "type": "module",
  "keywords": [
    "graphql",
    "f1",
    "prisma",
    "typescript",
    "javascript",
    "node",
    "gqloom",
    "apollo",
    "graphql-yoga"
  ],
  "license": "ISC",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "pull": "prisma db pull",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "build": "cp prisma/schema.prisma.example prisma/schema.prisma && yarn pull && prisma-case-format --file=prisma/schema.prisma && yarn generate",
    "generate-schema.graphql": "tsx src/schema/schemaGenerator.ts",
    "vercel-build": "yarn build",
    "patch": "yarn version --patch",
    "minor": "yarn version --minor",
    "major": "yarn version --major"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": "24.x"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "prisma": "^7.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@gqloom/core": "^0.14.1",
    "@gqloom/prisma": "^0.12.2",
    "@graphql-yoga/render-graphiql": "^5.17.0",
    "@prisma/adapter-mariadb": "^7.1.0",
    "@prisma/client": "^7.0.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-yoga": "5.17.1",
    "prisma-case-format": "^2.2.1"
  }
}
